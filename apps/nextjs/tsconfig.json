{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@acme/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext",
    "strictNullChecks": true
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
